generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Aluno {
  id_aluno        String   @id @default(uuid())
  nome_aluno      String   @relation(fields: [id_grupo], references: [id__aluno])
  matricula_aluno Int      @unique
  id_grupo        Int
  email_aluno     String   @unique
  curso_aluno     String
  nota_aluno      Float
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now())
}

model Professor {
  id_prof    Int      @id
  nome_prof  String
  email_prof String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model Grupo {
  id_grp      Int      @id
  lider_grupo String
  nome_grp    String
  id_aluno    Int
  alunos      Aluno[]
  nota_grp    Float
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())
}

model Estande {
  numero_estande Int      @id
  created_at     DateTime @default(now())
  updated_at     DateTime @default(now())
}

model Avaliacao_Professor {
  id_avaliacao_prof Int      @id
  nota_ava_prof     Float
  horario           DateTime
  created_at        DateTime @default(now())
  updated_at        DateTime @default(now())
}

model Avaliacao_Aluno {
  id_avaliacao_aluno Int      @id
  nota_ava_aluno     Float
  horario            DateTime
  created_at         DateTime @default(now())
  updated_at         DateTime @default(now())
}
